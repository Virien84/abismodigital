---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <!-- Blog post header -->
      <div class="py-8">
        <h1 class="text-3xl font-bold mb-2">{frontmatter.title}</h1>
        <p class="text-gray-500 text-sm">
          Published on <time
            datetime={frontmatter.pubDate.toString().slice(0, 10)}
            >{frontmatter.pubDate.toString().slice(0, 10)}</time
          >
        </p>
        <div>
          {
            frontmatter.tags.map((tag) => (
              <span class="mr-2 whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-sm text-purple-700">
                <a href={`/tags/${tag}`}>{tag}</a>
              </span>
            ))
          }
        </div>
      </div>

      <!-- Featured image -->
      <img
        src={frontmatter.image.url}
        alt={frontmatter.image.alt}
        class="w-full h-auto mb-8"
      />

      <!-- Blog post content -->
      <div class="prose prose-sm sm:prose lg:prose-lg xl:prose-xl mx-auto">
        <slot />
      </div>
    </div>
  </div>
</BaseLayout>
